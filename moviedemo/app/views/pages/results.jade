extends ../layout

block content
  .container
    .row.col-md-10
      .panel.panel-default
        .panel-heading
          h3 #{keyword}
        .panel-body
          if movies && movies.length
            each item in movies
              p.ulFirst
              table(width="100%")
                tbody
                  tr.item
                    td(width="100"  valign="top")
                      a(href="/movie/#{item._id}")
                        img.imglist(src="#{item.poster}", alt="#{item.title}")
                    td(valign="top")
                      a(href="/movie/#{item._id}")
                        span(style="font-size:16px;") #{item.title}
                      p 导演:#{item.director} | 语言:#{item.language} | 国家:#{item.country} | 上映年份:#{item.year}
                      p 简介:#{item.summary}
              //- p: a.btn.btn-primary(href="/movie/#{item._id}", role="button") 观看预告片
      ul.pagination
        - for (var i = 0; i < totalPage; i++) {
          - if (currentPage == (i + 1)) {
              li.active
                span #{currentPage}
          - }
          - else {
              li
                a(href='/results?#{query}&p=#{i}') #{i + 1}
          - }
        - }